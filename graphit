#!/bin/shi

INTERFACE='wlan0'
OUT_FILE='./catographer-file'
OUT_FORMAT='.csv'
intro

## Put network card on monitor mode.
echo '*** NETWORK CARD: ' + $INTERFACE + 'INTO MONITOR MODE ***'
sudo airmon-ng start $INTERFACE

echo '*** SEARCHING NETWORK ***'
sudo timeout 30 airodump-ng -w $OUT_FILE --output-format csv $INTERFACE

echo '*** NETWORK CARD INTO MANAGED MODE ***'
sudo airmon-ng stop $INTERFACE

echo '*** ATTEMPTING TO RETURN OFFLINE NETWORK RESOURCES ***'
sudo service NetworkManger start && \
sudo service networking start

echo '*** GRAPHING ***'
sudo airgraph-ng -i "${$OUT_FILE}${OUT_FORMAT}" --graph-type CAPR













